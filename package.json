{
  "name": "warriorjs-core",
  "version": "0.0.0",
  "description": "The bowels of WarriorJS",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib coverage",
    "lint": "eslint src test",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:cov": "yarn test -- --coverage",
    "build": "babel src --out-dir lib",
    "prepublish": "yarn run clean && yarn run lint && yarn test && yarn run build",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:watch": "yarn run docs:prepare && gitbook serve",
    "docs:build": "yarn run docs:prepare && gitbook build && cp logo/apple-touch-icon.png _book/gitbook/images/apple-touch-icon-precomposed-152.png && cp logo/favicon.ico _book/gitbook/images",
    "docs:publish": "yarn run docs:clean && yarn run docs:build && cp CNAME _book && cd _book && git init && git commit --allow-empty -m 'Update docs' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'Update docs' && git push git@github.com:warriorjs/warriorjs-core gh-pages -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warriorjs/warriorjs-core.git"
  },
  "keywords": [
    "warriorjs",
    "core",
    "game",
    "learn",
    "javascript"
  ],
  "author": "Matias Olivera <moliverafreire@gmail.com> (https://github.com/olistic)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/warriorjs/warriorjs-core/issues"
  },
  "homepage": "https://github.com/warriorjs/warriorjs-core#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "gitbook-cli": "^2.3.0",
    "jest": "^20.0.1",
    "prettier": "^1.3.1",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "testRegex": "(/test/.*\\.spec.js)$"
  }
}
